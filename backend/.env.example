# Server Port
PORT=5000

# MongoDB Configuration
# IMPORTANT: Use MONGO_URL (not MONGO_URI) - this is what your db.js file expects
# Get your MongoDB connection string from MongoDB Atlas
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGO_URL=your_mongodb_connection_string_here

# Groq API Configuration
# Get your API key from https://console.groq.com/
GROQ_API_KEY=https://api.groq.com/openai/v1/chat/completions

# JWT Secret for Authentication
# Use a strong, random string for production (minimum 32 characters recommended)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Redis Configuration (Optional - for rate limiting/caching)
# Format: redis://username:password@host:port or redis://localhost:6379
# REDIS_URL=redis://localhost:6379
